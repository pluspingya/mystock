{
  "name": "mystock",
  "version": "1.0.0",
  "description": "A virtual stock portfolio and trading web application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rimraf public/*",
    "cleanbuild": "rimraf client/build/*",
    "copybuild": "ncp client/build/ public/",
    "build": "npm run clean && npm run cleanbuild && npm install --prefx client && npm run build --prefix client && npm run copybuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "stock",
    "portfolio",
    "trading",
    "exchange"
  ],
  "author": "Plus Pingya",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "decimal.js": "^10.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.1",
    "rimraf": "^3.0.0"
  },
  "engines": {
    "node": "v12.13.0"
  }
}
